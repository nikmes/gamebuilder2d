{
  "audio": {
    "core": {
      "enabled": true,
      "diagnostics_logging": true
    },
    "volumes": {
      "master": 1.0,
      "music": 1.0,
      "sfx": 1.0
    },
    "engine": {
      "max_concurrent_sounds": 16,
      "search_paths": [
        "assets/audio"
      ]
    },
    "preload": {
      "sounds": [
        "spaceinvaders/hit.wav"
      ],
      "music": [],
      "sound_aliases": {},
      "music_aliases": {}
    }
  },
  "fullscreen": {
    "game_height": 1080,
    "game_width": 1920,
    "height": 1080,
    "width": 1920
  },
  "input": {
    "hotkeys": [
      { "action": "global.openFileDialog", "shortcut": "Ctrl+O" },
      { "action": "global.openImageDialog", "shortcut": "Ctrl+Shift+O" },
      { "action": "global.toggleEditorFullscreen", "shortcut": "F11" },
      { "action": "global.focusTextEditor", "shortcut": "Ctrl+Shift+E" },
      { "action": "global.showConsole", "shortcut": "Ctrl+Shift+C" },
      { "action": "global.spawnDockWindow", "shortcut": "Ctrl+Shift+N" },
      { "action": "global.openConfiguration", "shortcut": "Ctrl+," },
      { "action": "global.openHotkeySettings", "shortcut": "Ctrl+Alt+K" },
      { "action": "layouts.saveLayout", "shortcut": "Ctrl+Alt+S" },
      { "action": "layouts.openManager", "shortcut": "Ctrl+Alt+L" },
      { "action": "codeEditor.newFile", "shortcut": "Ctrl+N" },
      { "action": "codeEditor.openFile", "shortcut": "Ctrl+Shift+O" },
      { "action": "codeEditor.saveFile", "shortcut": "Ctrl+S" },
      { "action": "codeEditor.saveFileAs", "shortcut": "Ctrl+Shift+S" },
      { "action": "codeEditor.saveAll", "shortcut": "Ctrl+Alt+S" },
      { "action": "codeEditor.closeTab", "shortcut": "Ctrl+W" },
      { "action": "codeEditor.closeAllTabs", "shortcut": "Ctrl+Shift+W" },
      { "action": "gameWindow.toggleFullscreen", "shortcut": "Alt+Enter" },
      { "action": "gameWindow.resetGame", "shortcut": "Ctrl+R" },
      { "action": "gameWindow.cycleNextGame", "shortcut": "Ctrl+Tab" },
      { "action": "gameWindow.cyclePrevGame", "shortcut": "Ctrl+Shift+Tab" },
      { "action": "fullscreen.exitSession", "shortcut": "Esc" }
    ]
  },
  "textures": {
    "default_filter": "bilinear",
    "generate_mipmaps": false,
    "log_atlas_contents": false,
    "max_bytes": 0,
    "placeholder_path": "",
    "search_paths": [
      "assets/textures"
    ]
  },
  "ui": {
    "theme": "dark"
  },
  "version": 1,
  "window": {
    "fullscreen": true,
    "height": 1080,
    "width": 1920
  }
}