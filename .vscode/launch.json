{
  // VS Code launch configurations for debugging the Linux build via WSL
  "version": "0.2.0",
  "configurations": [
    {
      "name": "WSL: Debug build-linux (Makefiles)",
      "type": "cppdbg",
      "request": "launch",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "program": "/mnt/c/Users/nikme/source/repos/GameBuilder2d/build-linux/GameBuilder2d/GameBuilder2d",
      "cwd": "/mnt/c/Users/nikme/source/repos/GameBuilder2d/build-linux/GameBuilder2d",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": false,
      "preLaunchTask": "WSL: Build (Debug)",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "description": "Enable pretty printing",
          "ignoreFailures": true
        }
      ],
      "pipeTransport": {
        "pipeProgram": "wsl.exe",
        "pipeArgs": ["-e", "bash", "-lc"],
        "debuggerPath": "/usr/bin/gdb"
      }
    },
    {
      "name": "WSL: Debug out/build/linux-debug (Ninja)",
      "type": "cppdbg",
      "request": "launch",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "program": "/mnt/c/Users/nikme/source/repos/GameBuilder2d/out/build/linux-debug/GameBuilder2d/GameBuilder2d",
      "cwd": "/mnt/c/Users/nikme/source/repos/GameBuilder2d/out/build/linux-debug/GameBuilder2d",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": false,
      "preLaunchTask": "WSL: Build (Ninja, Debug) [requires ninja]",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "description": "Enable pretty printing",
          "ignoreFailures": true
        }
      ],
      "pipeTransport": {
        "pipeProgram": "wsl.exe",
        "pipeArgs": ["-e", "bash", "-lc"],
        "debuggerPath": "/usr/bin/gdb"
      }
    },
    {
      "name": "Debug GameBuilder2d (VS)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build-vs-2022-x64-rlimgui/GameBuilder2d/Debug/GameBuilder2d.exe",
      "args": [],
      "cwd": "${workspaceFolder}/build-vs-2022-x64-rlimgui/GameBuilder2d/Debug",
      "console": "integratedTerminal",
      "preLaunchTask": "CMake: Build (Windows VS2022 x64 Debug)"
    },
    {
      "name": "CMake: Debug current target (Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${command:cmake.launchTargetDirectory}",
      "console": "integratedTerminal",
      "preLaunchTask": "CMake: Build (Windows VS2022 x64 Debug)",
      "presentation": { "group": "cmake" }
    }
  ]
}
