{
  // VS Code tasks to build and run via WSL
  "version": "2.0.0",
  "tasks": [
    {
      "label": "WSL: Configure (Unix Makefiles, Debug)",
      "type": "shell",
      "command": "wsl.exe",
      "args": [
        "--cd",
        "${workspaceFolder}",
        "-e",
        "bash",
        "-lc",
        "cmake --preset wsl-debug"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "WSL: Build (Debug)",
      "type": "shell",
      "command": "wsl.exe",
      "args": [
        "--cd",
        "${workspaceFolder}",
        "-e",
        "bash",
        "-lc",
        "cmake --build --preset wsl-debug"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"],
      "dependsOn": ["WSL: Configure (Unix Makefiles, Debug)"]
    },
    {
      "label": "WSL: Run",
      "type": "shell",
      "command": "wsl.exe",
      "args": [
        "--cd",
        "${workspaceFolder}/build-linux-debug/GameBuilder2d",
        "-e",
        "bash",
        "-lc",
        "./GameBuilder2d"
      ],
      "group": { "kind": "test", "isDefault": true },
      "problemMatcher": []
    },
    
    {
      "label": "WSL: Clean",
      "type": "shell",
      "command": "wsl.exe",
      "args": [
        "--cd",
        "${workspaceFolder}",
        "-e",
        "bash",
        "-lc",
        "rm -rf build-linux-debug build-linux-release out"
      ],
      "problemMatcher": []
    },
    {
      "label": "WSL: Configure (Unix Makefiles, Release)",
      "type": "shell",
      "command": "wsl.exe",
      "args": [
        "--cd",
        "${workspaceFolder}",
        "-e",
        "bash",
        "-lc",
        "cmake --preset wsl-release"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "WSL: Build (Release)",
      "type": "shell",
      "command": "wsl.exe",
      "args": [
        "--cd",
        "${workspaceFolder}",
        "-e",
        "bash",
        "-lc",
        "cmake --build --preset wsl-release"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "dependsOn": ["WSL: Configure (Unix Makefiles, Release)"]
    },
    {
      "label": "WSL: Run (Release)",
      "type": "shell",
      "command": "wsl.exe",
      "args": [
        "--cd",
        "${workspaceFolder}/build-linux-release/GameBuilder2d",
        "-e",
        "bash",
        "-lc",
        "./GameBuilder2d"
      ],
      "group": "test",
      "problemMatcher": []
    }
    ,
    {
      "label": "CMake: Configure (Windows VS2022 x64 Debug)",
      "type": "shell",
      "command": "cmake",
      "args": ["--preset", "windows-vs2022-x64-debug"],
      "group": "build",
      "problemMatcher": ["$msCompile"],
      "detail": "Configure using CMake Preset"
    },
    {
      "label": "CMake: Build (Windows VS2022 x64 Debug)",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "--preset", "windows-vs2022-x64-debug"],
      "group": { "kind": "build" },
      "dependsOn": ["CMake: Configure (Windows VS2022 x64 Debug)"],
      "problemMatcher": ["$msCompile"],
      "detail": "Build using CMake Preset"
    }
  ]
}
