{
  // VS Code tasks to build and run via WSL
  "version": "2.0.0",
  "tasks": [
    {
      "label": "WSL: Configure (Unix Makefiles, Debug)",
      "type": "shell",
      "command": "wsl.exe",
      "args": [
        "--cd",
        "${workspaceFolder}",
        "-e",
        "bash",
        "-lc",
        "cmake -S . -B build-linux -DCMAKE_BUILD_TYPE=Debug"
      ],
      "group": "build",
      "options": {
        "env": {
          "CMAKE_GENERATOR": "Unix Makefiles"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "WSL: Build (Debug)",
      "type": "shell",
      "command": "wsl.exe",
      "args": [
        "--cd",
        "${workspaceFolder}",
        "-e",
        "bash",
        "-lc",
        "cmake --build build-linux"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"],
      "dependsOn": ["WSL: Configure (Unix Makefiles, Debug)"]
    },
    {
      "label": "WSL: Run",
      "type": "shell",
      "command": "wsl.exe",
      "args": [
        "--cd",
        "${workspaceFolder}/build-linux/GameBuilder2d",
        "-e",
        "bash",
        "-lc",
        "./GameBuilder2d"
      ],
      "group": { "kind": "test", "isDefault": true },
      "problemMatcher": []
    },
    
    {
      "label": "WSL: Clean",
      "type": "shell",
      "command": "wsl.exe",
      "args": [
        "--cd",
        "${workspaceFolder}",
        "-e",
        "bash",
        "-lc",
        "rm -rf build-linux out"
      ],
      "problemMatcher": []
    },

    {
      "label": "WSL: Configure (Ninja, Debug) [requires ninja]",
      "type": "shell",
      "command": "wsl.exe",
      "args": [
        "--cd",
        "${workspaceFolder}",
        "-e",
        "bash",
        "-lc",
        "cmake --preset linux-debug"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "WSL: Build (Ninja, Debug) [requires ninja]",
      "type": "shell",
      "command": "wsl.exe",
      "args": [
        "--cd",
        "${workspaceFolder}",
        "-e",
        "bash",
        "-lc",
        "cmake --build --preset linux-debug"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "dependsOn": ["WSL: Configure (Ninja, Debug) [requires ninja]"]
    }
    ,
    {
      "label": "CMake: Configure (Windows VS2022 x64 Debug)",
      "type": "shell",
      "command": "cmake",
      "args": ["--preset", "windows-vs2022-x64-debug"],
      "group": "build",
      "problemMatcher": ["$msCompile"],
      "detail": "Configure using CMake Preset"
    },
    {
      "label": "CMake: Build (Windows VS2022 x64 Debug)",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "--preset", "windows-vs2022-x64-debug"],
      "group": { "kind": "build" },
      "dependsOn": ["CMake: Configure (Windows VS2022 x64 Debug)"],
      "problemMatcher": ["$msCompile"],
      "detail": "Build using CMake Preset"
    }
  ]
}
